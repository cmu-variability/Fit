<!DOCTYPE html>
<html lang="en">
<head>
  <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-app.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-database.js"></script>
  <script src="https://www.gstatic.com/firebasejs/8.7.0/firebase-auth.js"></script>
  <script src="firebase_config.js"></script>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Login Page</title>
  <style>
    body {
      display: flex;
      align-items: center;
      justify-content: center;
      height: 100vh;
      margin: 0;
    }

    .login-box {
      width: 300px;
      padding: 20px;
      border: 1px solid #ccc;
      border-radius: 5px;
      box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    }

    .login-input {
      width: 100%;
      margin-bottom: 10px;
      padding: 8px;
      box-sizing: border-box;
    }

    .login-button {
      width: 100%;
      padding: 10px;
      box-sizing: border-box;
      background-color: #4CAF50;
      color: #fff;
      border: none;
      border-radius: 3px;
      cursor: pointer;
    }
  </style>
</head>
<body>
  <div class="login-box">
    <h2>Login</h2>
    <form action="/" method="post">
      <!-- Hidden input to store the password from the server -->
      <input type="hidden" id="serverPassword" name="serverPassword" value="<%= password %>">
      <input type="hidden" id="serverEmail" name="serverEmail" value="<%= email %>">

      <!-- Call the checkCurrentUserURL function with the password from the server -->
      <script>
        var passwordFromServer = document.getElementById('serverPassword').value;
        var emailFromServer = document.getElementById('serverEmail').value;
        connectToFirebase(emailFromServer, passwordFromServer);
      </script>

      <!-- Your form elements, including the password input -->
      <label for="username">Username:</label>
      <input type="text" id="username" name="username" class="login-input" required>

      <label for="password">Password:</label>
      <input type="password" id="password" name="password" class="login-input" required>

      <button type="button" class="login-button" onclick="submitLoginForm()">Login</button>
    </form>
  </div>
  <script>
    function submitLoginForm() {
      // Get the entered username and password
      const username = document.getElementById('username').value;
      const password = document.getElementById('password').value;

      // Call the authentication function
      checkValidCredentials(username, password);
    }
  </script>
</body>
</html>
